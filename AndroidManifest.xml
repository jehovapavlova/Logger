<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="carlgibson.android.logger"
          android:versionCode="1"
          android:versionName="1.0">

    <uses-sdk
            android:minSdkVersion="8"
            android:targetSdkVersion="17"/>

    <application
            android:allowBackup="true"
            android:icon="@drawable/ic_launcher"
            android:label="@string/app_name"
            android:theme="@style/AppTheme">
        <activity
                android:name=".Controller.AddLogActivity"
                android:label="@string/title_activity_add_log_entry"
                android:screenOrientation="portrait"
                android:windowSoftInputMode="stateHidden"
                android:configChanges="orientation">
        </activity>
        <activity
                android:name=".Controller.ListLogsActivity"
                android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
                android:name=".Controller.LogDetailsActivity"
                android:label="@string/title_activity_log_details_activity">
        </activity>
        <activity android:name=".Controller.EditItemActivity" android:label="EditItemActivity"/>
        <activity android:name=".Controller.AddItemActivity" android:label="AddItemActivity"/>
    </application>

</manifest>